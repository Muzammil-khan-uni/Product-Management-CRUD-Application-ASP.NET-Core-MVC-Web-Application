@model Lab8MVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h2>Product Details</h2>
<table class="table">
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Price:</th>
        <td>@Model.Price.ToString("C")</td>
    </tr>
    <tr>
        <th>Description:</th>
        <td>@Model.Description</td>
    </tr>
</table>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
