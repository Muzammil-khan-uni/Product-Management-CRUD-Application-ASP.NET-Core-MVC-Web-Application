@model IEnumerable<Lab8MVC.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Product List</h2>
<a class="btn btn-primary mb-3" href="@Url.Action("Create")">Add New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                    <a class="btn btn-secondary btn-sm" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>